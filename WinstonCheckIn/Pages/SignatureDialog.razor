@using MudBlazor

<MudDialog>
    <DialogContent>
        <div style="text-align: center;">
            <img src="@SignatureData" style="max-width: 100%; max-height: 400px; border: 1px solid #ccc; border-radius: 4px;" />
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    
    [Parameter] public string SignatureData { get; set; } = string.Empty;
    [Parameter] public string PersonName { get; set; } = string.Empty;

    private void Close()
    {
        MudDialog.Close();
    }
}
